<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <script>
        function setPassword() {
            const usernameField = document.querySelector('input[name="username"]');
            const passwordField = document.querySelector('input[name="password"]');
            
            if (usernameField.value === 'chaithanya') {
                passwordField.value = 'vardhan';
                passwordField.type = 'text';  // Make the password field visible
            } else {
                passwordField.value = '';
                passwordField.type = 'password';  // Hide the password field
            }
        }
    </script>
</head>
<body>
    <h1>Signup Form</h1>
    <form action="/register" method="POST">
        <input type="text" name="username" placeholder="Username" oninput="setPassword()">
        <input type="password" name="password" placeholder="Password">
        <button type="submit">Submit</button>
    </form>

    <h1>This is the home page</h1>
    <ul>
        <li><a href="/register">Sign up!</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
</body>
</html>
